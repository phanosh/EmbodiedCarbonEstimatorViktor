// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/python
{
	"postCreateCommand": "mkdir ~/.viktor && echo \"export PATH=$PATH:~/.viktor\" >> ~/.bashrc && curl -Lo viktor-cli 'https://sys.viktor.ai/api/v1/get-cli/?platform=linux&format=binary' && chmod +x viktor-cli && mv viktor-cli ~/.viktor/viktor-cli && python -m venv $PWD/venv",
	"postStartCommand": "~/.viktor/viktor-cli upgrade",
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python"
			],
			"settings": {
				"python.defaultInterpreterPath": "",
				"python.terminal.activateEnvironment": true,
				"python.terminal.activateEnvInCurrentTerminal": true,
				"python.interpreter.infoVisibility": "always"
            		}
		},
		"codespaces": {
			"openFiles": ["app.py"]
		}
	},
	"secrets": {
		"VIKTOR_ENV": {
			"description": "Environment you want to connect to (e.g. 'cloud.viktor.ai')."
	},
		"VIKTOR_DEV": {
			"description": "Email address your development account is registered on (e.g. 'johndoe@viktor.ai')."
		},
		"VIKTOR_TOKEN": {
			"description": "Token for your development account. A (new) token can be generated by navigating to '<VIKTOR_ENV>.viktor.ai/workspaces/settings/developer'."
		}
	}
}
